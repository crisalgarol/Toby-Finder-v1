<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/cardview_light_background"
    android:gravity="top"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_dark"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/nombre_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:paddingTop="0dp"
                    android:text="Genaro Juarez Martínez"
                    android:textAlignment="textEnd"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="36dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/grupo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/nombre_txt"
                    android:gravity="center_vertical"
                    android:text="2CM2"
                    android:textAlignment="textEnd"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"></LinearLayout>

            <TextView
                android:id="@+id/materia_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:text="Teoría computacional"
                android:textAlignment="textEnd"
                android:textColor="@color/primary_text"
                android:textSize="37dp" />

            <TextView
                android:id="@+id/hora_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:text="07:00 - 08:30"
                android:textAlignment="textEnd"
                android:textColor="@color/cardview_dark_background"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Salón:"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/salon_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="1101"
                    android:textAlignment="textStart"
                    android:textColor="@color/divider"
                    android:textSize="30dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textedificio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="EDIFICIO "
                    android:textAlignment="textEnd"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/edificio_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="uno"
                    android:textAlignment="textEnd"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/piso_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="PLANTA BAJA"
                    android:textAlignment="textEnd"
                    android:textSize="30dp" />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/agregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:clickable="true"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="@color/primary_dark"
                app:elevation="0dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_action_name" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>