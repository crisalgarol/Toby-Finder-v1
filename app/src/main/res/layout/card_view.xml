<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#FFFFFF"
    android:layout_gravity="center"
    android:layout_marginBottom="25dp">

    <LinearLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_height="50dp"
                android:background="?attr/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textogrupo"
                android:text = "2CM2"
                android:textStyle="normal|bold"
                android:textColor="@color/cardview_light_background"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:textSize="35dp"
                android:textAlignment="textEnd" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:text="Genaro Juarez Martínez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textonombre"
                android:textAlignment="textEnd"
                android:textSize="29dp"
                android:paddingTop="5dp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Teoría computacional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textomateria"
                android:textAlignment="textEnd"
                android:textSize="24dp" />

            <TextView
                android:text="07:00 - 08:30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textohora"
                android:textSize="24dp"
                android:textAlignment="textEnd" />

            <TextView
                android:text="1101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textosalon"
                android:textSize="30dp"
                android:textAlignment="textEnd"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>